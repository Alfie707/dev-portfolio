---
const { title } = Astro.props
---

<section class="flex flex-col print:gap-0 gap-4">
  
  {title &&
    <div class="w-full text-3xl print:text-xl before:font-mono print:before:content-none before:text-xl relative font-bold before:relative items-center flex gap-3 print:after:gap-0 print:after:ml-0  after:content-[''] print:after:content-none after:block after:w-24 after:h-px after:bg-gray-500/10 after:mt-2 after:ml-3">
      {title}
    </div>
  }
  <slot />
</section>


<style>
  /* section {
    max-width: 700px;
    margin: 0 auto 48px;
  } */

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
