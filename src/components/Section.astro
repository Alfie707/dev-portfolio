---
const { title } = Astro.props;
---

<section class="flex flex-col gap-4 print:gap-0">
	{title && <div class="relative flex items-center w-full gap-3 text-3xl font-bold print:text-xl">{title}</div>}
	<slot />
</section>

<style>
	/* section {
    max-width: 700px;
    margin: 0 auto 48px;
  } */

	h2 {
		margin-bottom: 8px;
		font-weight: 700;
		line-height: 1.5;
		font-size: 1.5rem;
	}

	@media (width <= 700px) {
		section {
			margin-bottom: 38px;
		}
	}
</style>
